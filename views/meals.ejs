<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meals</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/style.css">
</head>

<body>

  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Lookoom</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/weather"><%= page.weatherNav %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/meals/<%= page.lang %>"><%= page.mealsNav %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/beer/<%= page.lang %>"><%= page.beerNav %></a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= page.langBtn %>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/meals/en">en</a></li>
              <li><a class="dropdown-item" href="/meals/ru">ru</a></li>
            </ul>
          </li>
        </ul>
        <% if (username) { %>
          <p class="nav-link" style="margin-right: 10px; margin-bottom: 0;"><%= username %></p>
          <form action="logout" method="POST">
            <button class="submit-btn" type="submit"><%= page.logoutBtn %></button>
          </form>
        <% } else  { %>
          <a href="/login" class="nav-link"><button class="submit-btn"><%= page.loginBtn %></button></a>
          
        <% }%>
        
      </div>
    </div>
  </nav>

  <div class="search-container">
    <h1><%= page.searchHeader %></h1>

    <form action="meals" method="GET">
      <input class="search-input" type="text "  type="submit" name="query" >
    </form>
    
    
  </div>
  <main>
    <div class="container">
      <h1 class="text-center my-4"><%= page.mainHeader %></h1>
      <div class="row">
        <% if (mealsData === null) { %> 
          <div class="error-msg">
            <p>Couldn't find anything.</p>
          </div>
        <% } else {%>
          <% mealsData.forEach(meal => { %>
            <div class="col-md-4 mb-4">
              <div class="card">
                <img src="<%= meal.strMealThumb %>" class="card-img-top" alt="<%= meal.strMeal %>">
                <div class="card-body">
                  <h5 class="card-title"><%= meal.strMeal %></h5>
                  <p class="card-text"><%= meal.strInstructions.substring(0, 100) %>...</p>
                  <a href="/instructions/<%= meal.idMeal %>/<%= page.lang %>?source=meals" class="btn"><%= page.infoBtn %></a>
                </div>
              </div>
            </div>
          <% }) %>
          <% } %>
        
      </div>
    </div>
  </main>


  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>
