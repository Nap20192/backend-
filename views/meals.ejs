<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meals</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/style.css">
</head>

<body>

  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Lookoom</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Weather</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/meals">Meals</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cocktails">Cocktails</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="search-container">
    <h1>Find Recipe</h1>

    <form action="meals" method="POST">
      <input type="text "  type="submit" name="query" >
    </form>
  </div>
  <main>
    <div class="container">
      <h1 class="text-center my-4">Meal Recipes</h1>
      <div class="row">
        <% mealsData.forEach(meal => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="<%= meal.strMealThumb %>" class="card-img-top" alt="<%= meal.strMeal %>">
              <div class="card-body">
                <h5 class="card-title"><%= meal.strMeal %></h5>
                <p class="card-text"><%= meal.strInstructions.substring(0, 100) %>...</p>
                <a href="/instructions/<%= meal.idMeal %>?source=meals" class="btn">View Recipe</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </main>


  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>
