<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="styles/style.css">
  <title>Weather Form</title>
  <style>
    .main {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      gap: 10px;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      background-color: #f0f0f0;
    }
    h1{
      font-weight: 700;
    }
    .weather-container {
      text-align: center;
      width: 50%;
      padding: 20px;
      border-radius: 10px;
      background: white;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    input {

      width:80%;
      padding: 15px;
      font-size: 1rem;
      color: #333;
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 25px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      outline: none;
      transition: all 0.3s ease-in-out;
    }

    input:focus {
      border-color: #74b9ff;
      box-shadow: 0 6px 12px rgba(192, 109, 26, 0.3);
    }

    input::placeholder {
      color: #aaa;
      font-style: italic;
    }

  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Lookoom</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/weather">Weather</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/meals/en">Meals</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/beer/en">Beer</a>
          </li>
  
        </ul>
        <% if (username) { %>
          <p class="nav-link" style="margin-right: 10px; margin-bottom: 0;"><%= username %></p>
          <form action="logout" method="POST">
            <button class="submit-btn" type="submit">Log Out</button>
          </form>
        <% } else  { %>
          <a href="/login" class="nav-link"><button class="submit-btn">Log In</button></a>
          
        <% }%>
        
      </div>
    </div>
  </nav>

  <div class="main">

  <div class="weather-container">
    <h1>Choose city</h1>

    <form action="weather" method="GET">

      <input type="text "  type="submit" name="city" >
    </form>
  </div>
</div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
