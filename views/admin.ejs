          </div>
        </div>
      </nav>

      <h1>Admin Panel</h1>

      <h2>Users List</h2>
      <table border="1">
          <thead>
              <tr>
                  <th>Username</th>
                  <th>Role</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tbody id="users-table">
              <!-- Users will be inserted here dynamically -->
          </tbody>
      </table>
  
      <script>
          // Fetch all users and display in table
          async function fetchUsers() {
              try {
                  const response = await fetch('http://localhost:3000/getUsers');
                  const users = await response.json();
  
                  const usersTable = document.getElementById('users-table');
                  usersTable.innerHTML = '';
                  users.forEach(user => {
                      const row = document.createElement('tr');
                      row.innerHTML = `
                          <td><input type="text" value="${user.username}" id="username-${user._id}" /></td>
                          <td>
                              <select id="role-${user._id}">
                                  <option value="admin" ${user.role === 'admin' ? 'selected' : ''}>Admin</option>
                                  <option value="user" ${user.role === 'user' ? 'selected' : ''}>User</option>
                              </select>
                          </td>
                          <td>
                              <button onclick="updateUser('${user._id}')">Update</button>
                              <button onclick="deleteUser('${user._id}')" style="background-color: red; color: white;">Delete</button>
                          </td>
                      `;
                      usersTable.appendChild(row);
                  });
              } catch (error) {
                  console.error('Error fetching users:', error);
              }
          }
  
          async function updateUser(userId) {
              const username = document.getElementById(`username-${userId}`).value;
              const role = document.getElementById(`role-${userId}`).value;
  
              const response = await fetch(`/admin/users/${userId}`, {
                  method: 'PUT',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ username, role })
              });
  
              const result = await response.json();
              alert(result.message);
              fetchUsers(); // Refresh the user list
          }
  
          async function deleteUser(userId) {
              if (confirm("Are you sure you want to delete this user?")) {
                  const response = await fetch(`/admin/${userId}`, { method: 'DELETE' });
                  const result = await response.json();
                  alert(result.message);
                  fetchUsers(); 
              }
          }
        document.addEventListener('DOMContentLoaded', fetchUsers);
      </script>
</body>
</html>